<% @results.each do |r| %>
   <div class="result-card">
    <div class="result-card-item result-card-votes">
      <i class="fas fa-chevron-up"></i>
      <p>10</p>
    </div>
    <div class="result-card-item result-card-body">
      <p class="card-title"><%= r.title %></p>
      <p class="card-description">Description of the course</p>
    </div>
    <div class="result-card-item result-card-icons">
      <% if params[:search] == "lesson" %>
        <% unless FavoriteLesson.find_by(user: current_user, lesson: r).present? %>
          <%= link_to favorite_lesson_path(r.id, type: "favorite"), method: :put, remote: true do %>
            <i class="fas fa-bolt"></i>
          <% end %>
        <% else %>
          <%= link_to "unfavorite", favorite_lesson_path(r.id, type: "unfavorite"), method: :put, remote: true %>
        <% end %>
      <% end %>
      <div id="result-tutorial">

        <% if params[:search] == "tutorial" %>
          <% unless FavoriteTutorial.find_by(user: current_user, tutorial: r).present? %>
            <%= link_to favorite_tutorial_path(r.id, type: "favorite"), method: :put, remote: true do %>
              <i class="fas fa-bolt"></i>
            <% end %>
          <% else %>
            <%= link_to "unfavorite", favorite_tutorial_path(r.id, type: "unfavorite"), method: :put, remote: true %>
          <% end %>
        <% end %>

      </div>
      <div id="test"></div>
    </div>
   </div>
<% end %>
